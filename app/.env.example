# API Keys for Voice Assistant
# Copy this file to .env and fill in your actual API keys

# Deepgram API Key (STT - Speech to Text)
# Get it from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# OpenRouter API Key (LLM - Language Model)
# Get it from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ElevenLabs API Key (TTS - Text to Speech)
# Get it from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# LLM Model Selection
# Options: nousresearch/hermes-3-llama-3.1-70b (human-like) or anthropic/claude-3.5-haiku (fast)
LLM_MODEL=anthropic/claude-3.5-haiku

# ElevenLabs Voice ID (optional, uses default if not set)
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Server Configuration
HOST=0.0.0.0
PORT=8000
